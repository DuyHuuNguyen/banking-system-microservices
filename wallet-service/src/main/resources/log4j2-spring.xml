<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">


    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="[%style{%d{yyyy-MM-dd HH:mm:ss}}{bright_green}   %style{%-35c{1}}{cyan} %style{[thread: %thread]}{cyan}  %highlight{%-5level} %style{[james-dev]}{yellow} [%style{wallet-service}{bright_green} : %style{${spring:server.port}}{magenta}] %style{%-45c{1}}{cyan} -    %msg%n"
                    disableAnsi="false"/>
        </Console>
    </Appenders>

    <Loggers>

        <Logger name="com.banking_app" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>
</Configuration>
